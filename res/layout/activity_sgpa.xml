<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dravid.sgpacalci2.SGPA"
    android:background="#ff5678">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter your Grade Points and Credits"
        android:id="@+id/sgpa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffff00"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GRADE  POINTS"
        android:id="@+id/gpa"
        android:layout_below="@+id/sgpa"
        android:layout_alignLeft="@+id/sgpa"
        android:layout_alignStart="@+id/sgpa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CREDITS"
        android:id="@+id/credits"
        android:layout_alignBottom="@+id/gpa"
        android:layout_alignRight="@+id/sgpa"
        android:layout_alignEnd="@+id/sgpa" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/s1"
        android:layout_below="@+id/gpa"
        android:layout_alignLeft="@+id/gpa"
        android:layout_alignStart="@+id/gpa"
        android:textAlignment="center"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/c1"
        android:layout_below="@+id/credits"
        android:layout_alignLeft="@+id/credits"
        android:layout_alignStart="@+id/credits"
        android:textAlignment="center"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/s2"
        android:layout_below="@+id/s1"
        android:layout_alignLeft="@+id/s1"
        android:layout_alignStart="@+id/s1"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/c2"
        android:layout_alignBottom="@+id/s2"
        android:layout_alignLeft="@+id/c1"
        android:layout_alignStart="@+id/c1"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/s3"
        android:layout_below="@+id/s2"
        android:layout_alignLeft="@+id/s2"
        android:layout_alignStart="@+id/s2"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/c3"
        android:layout_alignTop="@+id/s3"
        android:layout_alignLeft="@+id/c2"
        android:layout_alignStart="@+id/c2"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/s4"
        android:layout_below="@+id/s3"
        android:layout_alignLeft="@+id/s3"
        android:layout_alignStart="@+id/s3"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/c4"
        android:layout_alignTop="@+id/s4"
        android:layout_alignLeft="@+id/c3"
        android:layout_alignStart="@+id/c3"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/s5"
        android:layout_below="@+id/s4"
        android:layout_alignLeft="@+id/s4"
        android:layout_alignStart="@+id/s4"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/c5"
        android:layout_alignTop="@+id/s5"
        android:layout_alignLeft="@+id/c4"
        android:layout_alignStart="@+id/c4"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/s6"
        android:layout_below="@+id/s5"
        android:layout_alignLeft="@+id/s5"
        android:layout_alignStart="@+id/s5"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/c6"
        android:layout_alignBottom="@+id/s6"
        android:layout_alignLeft="@+id/c5"
        android:layout_alignStart="@+id/c5"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/s7"
        android:layout_below="@+id/s6"
        android:layout_alignLeft="@+id/s6"
        android:layout_alignStart="@+id/s6"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/c7"
        android:layout_below="@+id/c6"
        android:layout_alignLeft="@+id/c6"
        android:layout_alignStart="@+id/c6"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/s8"
        android:layout_below="@+id/s7"
        android:layout_alignLeft="@+id/s7"
        android:layout_alignStart="@+id/s7"
        android:gravity="center_vertical|center|center_horizontal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/c8"
        android:layout_below="@+id/c7"
        android:layout_alignLeft="@+id/c7"
        android:layout_alignStart="@+id/c7"
        android:gravity="center_vertical|center|center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SGPA"
        android:id="@+id/cgpa"
        android:onClick="onCGPA"
        android:background="#00ffff"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/s8"
        android:layout_alignStart="@+id/s8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sub1"
        android:id="@+id/sem1"
        android:layout_below="@+id/gpa"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sub2"
        android:id="@+id/sem2"
        android:layout_below="@+id/sem1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sub3"
        android:id="@+id/sem3"
        android:layout_below="@+id/sem2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sub4"
        android:id="@+id/sem4"
        android:layout_below="@+id/sem3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sub5"
        android:id="@+id/sem5"
        android:layout_below="@+id/sem4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sub6"
        android:id="@+id/sem6"
        android:layout_below="@+id/sem5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sub7"
        android:id="@+id/sem7"
        android:layout_below="@+id/sem6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sub8"
        android:id="@+id/sem8"
        android:layout_below="@+id/sem7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage"
        android:id="@+id/per"
        android:layout_alignTop="@+id/cgpa"
        android:layout_toRightOf="@+id/sem8"
        android:layout_toEndOf="@+id/sem8"
        android:background="#00ffff"
        android:onClick="onCGPA" />


</RelativeLayout>
